<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Le formulaire contient <%= pluralize(@user.errors.count, "erreur") %>.
    </div>
    <ul>
    <% @user.errors.values.each do |msg| %>
      <li><%= msg.first %></li>
    <% end %>
    </ul>
  </div>
<% end %>